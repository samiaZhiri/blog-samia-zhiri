

{% extends "layouts/default.twig" %}

{% block content %}
<br><br><br>
<div class="container">
<h1>Administration des commentaires</h1><br><br>
<a href="{{ route('admin.index')}}" class="btn btn-primary">Gestion des articles</a><br><br> 
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Commentaire</th>      
      <th scope="col">Auteur</th>
      <th scope="col">Publié le</th>
      <th scope="col">Validation</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  {% for row in comments %}
    <tbody>
        <tr>     
            <th scope="row">{{ row.id }}</th>
            <td>{{ row.content }}</td> 
             <td>{{ row.user }}</td>      
            <td>{{ row.created_at|date("d/m/Y à H:i") }}</td> 
            <td>
            <a href="{{ route('admin.validComment', {id:row.id})}}" class="btn btn-success">Valider</a>
          
            <td>                       
                <a href="{{ route('admin.deleteComment', { id:row.id })}}" class="btn btn-danger">Supprimer</a>
            </td>  
        </tr>   
    </tbody>
  {% endfor %}
</table> 
</div> 
<br><br><br> 

 {% endblock %}
{% extends "layouts/default.twig" %}

{% block content %} 

<!-- Section: Design Block -->
<section class="text-center text-lg-start">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

    @media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
    .input-error{
      border:1px solid rgb(190,69,69);
    }
    .text-error{
      color: rgb(190,69,69);
    }
  </style>

  <!-- Jumbotron -->
  <div class="container py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Sign up</h2>                        
            <form class="was-validated" id="loginForm" method="POST" action="{{ route('users.signup')}}">
              <!-- 2 column grid layout with text inputs for the first and last names -->
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" id="username" class="form-control {{(error.username in error) ? 'input-error' : 'input-success'}}" name="username" placeholder="Votre username" value="{{post.username}}" >
                    {{error.username | markdown }}
                    <label class="form-label {{(error.username in error) ? 'text-error' : 'text-success'}}" for="username">Username</label>
                    
                  </div>
                </div>                
              </div>              

              <!-- Password input -->
              <div class="col-md-6 mb-4">
                <input type="password" id="password" class="form-control {{(error.password in error) ? 'input-error' : ''}}" name="password" placeholder="Password" value="{{post.password}}">
                {{error.password | markdown}}
                <label for="password" class= "{{(error.password in error) ? 'text-error' : 'text-success'}}">Password</label>                
              </div> 

             <!-- Email input -->
              <div class="col-md-6 mb-4">
                <input type="email" id="email" class="form-control {{(error.email in error) ? 'input-error' : ''}}" name="email" placeholder="Email" value="{{post.email}}">
                {{error.email | markdown}}
                <label for="email" class= "{{(error.email in error) ? 'text-error' : 'text-success'}}">Email</label>                
              </div> 

              <!-- Phone input -->
              <div class="col-md-6 mb-4">
                <input type="text" id="phone" class="form-control {{(error.phone in error) ? 'input-error' : ''}}" name="phone" placeholder="Phone" value="{{post.phone}}">
                {{error.phone | markdown}}
                <label for="email" class= "{{(error.phone in error) ? 'text-error' : 'text-success'}}">Phone</label>                
              </div>                       

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">Envoyer</button> 
              <a href="{{ route('users.store') }}" class="btn btn-success btn-block mb-4">Login</a>
                           
            </form>
             
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <img src="/assets/img/register.jpg" class="w-100 rounded-4 shadow-4"
          alt="phone register" />
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->


{% endblock %}
{% extends "layouts/default.twig" %}

{% block content %}   

<link href="/assets/css/index.css" rel="stylesheet">
<div class="album py-5 bg-light">  
  <div class="container">
    <div class="row">
      {% for query in queries %}
        <div class="col-lg-6">
          <div class="card">
            <img src="{{query.img}}" class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">
            <div class="card-block">
              <h5 class="card-title">{{query.title}}</h5>
              <p>{{ query.created_at|date("d/m/Y Ã  H:i") }}</p>
              <p class="card-text">{{ query.content | striptags | slice(0, 100)  }}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><a href="{{ route('home.show',{'id':query.id}) }}">Lire la suite</a></button>                    
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

 {% endblock %}